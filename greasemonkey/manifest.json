{
  "name": "Turntable.FM Squared",
  "version": "1.2.0",
  "description": "A set of Turntable.FM tools including an improved chat UI, song analytics, auto-upvote (autobop), anti-idle, auto-respond, additional track information, and similar track listings.",
  "browser_action": {
    "default_title": "TT.FM Squared",
    "default_popup": "tt-squared.html",
    "default_icon": "icon.png"
  },                              
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [{
    "matches": [
      "http://turntable.fm/*"
    ],
    "exclude_matches": [
      "http://turntable.fm/lobby",
      "http://turntable.fm/jobs",
      "http://turntable.fm/about",
      "http://turntable.fm/terms",
      "http://turntable.fm/copyright",
      "http://turntable.fm/privacy",
      "http://turntable.fm/static*"
    ],
    "css": ["tt-squared.css"],
    "js": ["tt-squared.js"],
    "run_at": "document_end",
    "all_frames": true
  }],
  "permissions": [
    "tabs",
    "notifications",
    "http://turntable.fm/*",
    "https://raw.github.com/cballou/Turntable.FM-Squared/*"
  ]
}